<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="/dist/css/bootstrap.min.css">
</head>
<body>
<nav class="navbar navbar-primary bg-primary">
    <a class="navbar-brand">
        <img src="/img/message.png" width="50" height="50" alt="">
    </a>
</nav>

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-1">
            <div class="card shadow-lg mt-5 mb-5 p-3">
                <div class="card shadow-lg mt-5 mb-5 p-3">
                    <h3 class="text-center">Add A Message</h3>
                    <form action="/message/new" method="POST">
                        <div class="form-group">
                            <input type="text" name="name" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <textarea cols="30" rows="10" name="message" class="form-control" placeholder="Place your message here..."></textarea>
                        </div>
                        <input type="submit" value="Post"  class="btn btn-primary" style="margin: 0 auto; display: block; text-align: center;">
                    </form>
                </div>
                <div class="card shadow-lg p-3 mt-5 mb-5">
                    <% for (var message of messages) { %>
                        <div class="message shadow-lg rounded p-1 m-auto">
                            <p class="lead text-center"><%= message.name %></p>
                            <p class="text-center"><%= message.message %></p>
                            <p class="text-center"><small><%= message.created_at.toDateString() %></small></p>
                        </div>
                    <% for (var comment of message.comments) { %>
                        <div class="message shadow-lg rounded p-1 m-auto mt-5">
                            <p class="lead text-center"><%= comment.name %></p>
                            <p class="text-center"><%= comment.comment %></p>
                            <p class="text-center"><small><%= comment.created_at %></small></p>
                        </div>
                    <% } %>        
                    <div class="card shadow-lg p-1 mt-1 mb-1">
                        <h3 class="text-center">Add A Comment</h3>
                        <form action="/message/<%= message.id %>" method="POST">
                            <div class="form-group">
                                <input type="text" name="name" class="form-control" placeholder="Name">
                            </div>
                            <div class="form-group">
                                <textarea cols="30" rows="10" name="comment" class="form-control" placeholder="Place your message here..."></textarea>
                            </div>
                            <input type="submit" value="Post" class="btn btn-primary" style="margin: 0 auto; display: block; text-align: center;">
                        </form>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

    <script src="/dist/jquery.min.js"></script>
    <script src="/dist/popper.js/umd/popper.min.js"></script>
    <script src="/dist/js/bootstrap.min.js"></script>
</body>
</html>